{% extends 'base.html.twig' %}

{% block title %}Sortie index{% endblock %}

{% block body %}
    <h1 style="color: #0c5460">Sortie</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Category</th>
                <th>StartTime</th>
                <th>BackTime</th>
                <th>Place</th>
                <th>Title</th>
                <th>GuideName</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for sortie in sorties %}
            <tr>
                <td>{{ sortie.id }}</td>
                <td>{{ sortie.Category }}</td>
                <td>{{ sortie.StartTime }}</td>
                <td>{{ sortie.BackTime }}</td>
                <td>{{ sortie.Place }}</td>
                <td>{{ sortie.Title }}</td>
                <td>{{ sortie.GuideName }}</td>
                <td>
                    <a href="{{ path('sortie_show', {'id': sortie.id}) }}"class="fas fa-info-circle"></a>
                    <a style="color: white">a</a>
                    <a href="{{ path('sortie_edit', {'id': sortie.id}) }}" class="fas fa-edit"></a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('sortie_new') }}" style="color: black">Create new</a>
{% endblock %}
